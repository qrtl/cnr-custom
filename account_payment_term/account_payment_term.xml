	<!-- Payment Term -->
	    <record id="view_payment_term_form_z1" model="ir.ui.view">
            <field name="name">view.payment.term.form.z1</field>
            <field name="model">account.payment.term</field>
            <field name="inherit_id" ref="account.view_payment_term_form"/>
            <field name="arch" type="xml">
                <field name="note" position="after">
                    <separator string="Monthly Cutoff"/>
                    <group>
                        <group>
                            <field name="monthly_cutoff"/>
                        </group>
                        <group>
                            <field name="month_end_cutoff"/>
                            <field name="cutoff_date"/>
                        </group>
                    </group>
                </field>
            </field>
        </record>

	    <record id="view_payment_term_line_form_z1" model="ir.ui.view">
            <field name="name">view.payment.term.line.form.z1</field>
            <field name="model">account.payment.term.line</field>
            <field name="inherit_id" ref="account.view_payment_term_line_form"/>
            <field name="arch" type="xml">
                <field name="days2" position="after">
                    <field name="months_added"/>
                    <field name="month_end_pay"/>
                    <field name="date"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
